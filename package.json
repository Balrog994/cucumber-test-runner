{
    "name": "cucumber-test-runner",
    "displayName": "CucumberJS Test Runner",
    "description": "Allow to discover, run and debug cucumber-js tests",
    "version": "0.4.1",
    "publisher": "balrog994",
    "license": "MIT",
    "icon": "docs/images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Balrog994/cucumber-test-runner"
    },
    "bugs": {
        "url": "https://github.com/Balrog994/cucumber-test-runner/issues"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Debuggers",
        "Testing",
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.feature"
    ],
    "main": "./dist/main.js",
    "contributes": {
        "commands": []
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "test-compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "download-api": "vscode-dts main && vscode-dts dev",
        "postinstall": "npm run download-api"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vscode/test-electron": "^2.2.2",
        "esbuild": "^0.17.15",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4",
        "vscode-dts": "^0.3.3"
    },
    "dependencies": {
        "@cucumber/cucumber": "^8.10.0",
        "@cucumber/gherkin": "^26.0.3",
        "@cucumber/messages": "^21.0.1",
        "@rauschma/stringio": "^1.4.0"
    }
}
